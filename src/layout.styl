.wrapper
  display: flex;
  flex-direction: column;
  padding-top: 10px;
  box-sizing: border-box;
  height: 100%;

.content
  display: flex;
  flex: 1;

.header
  display: flex;
  box-sizing: border-box;
  height: 60px;
  padding: 0 22px;

.aside
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex-shrink: 0;
  width: 244px;
  padding: 0 24px 24px;

.todo
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 20px 0;

.scheduleHeader
  flex-shrink: 0;

.eventList
  flex-grow: 1;
  overflow-y: auto;

.main
  display: flex;
  flex: 1;
  background-color: #fff;
  border-radius: 4px;
  border: solid 1px #e5e5e5;
  box-shadow: 0 2px 6px 0 rgba(0, 0, 0, .1);

.right
  box-sizing: border-box;
  min-width: 420px;
  padding-left: 20px;
  overflow-x: auto;
  position: relative;

.doingsBlock
  height: 100%;
  display: flex;
  flex-direction: column;

.doingsText
  font-size: 16px;
  margin: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  height: 46px;
  font-weight: 500;
  color: rgba(0, 0, 0, .8);