.right
  width: 100%;
  height: 100%;
  width: 420px;
  position: fixed;
  right: 0;
  z-index: 999;
  border-left: 1px solid #00000021;
  background-color: #ffffff;
  box-shadow: -20px 0 50px -10px rgba(0, 0, 0, .12);
  padding: 28px 32px;
  box-sizing: border-box;
  transition: transform .2s ease-in;

  &.closed
    transform: translateX(100%);

.closeBtn
  cursor: pointer;
  width: 20px;
  height: 20px;
  position: absolute;
  right: 22px;
  top: 24px;
  z-index: 10;
