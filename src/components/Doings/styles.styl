.card
  position: absolute;
  border: 1px solid #e3e5eb;
  width: 170px;
  height: 100px;
  border-radius: 8px;
  background-color: #ffffff;
  padding: 17px 19px;
  box-sizing: border-box;
  transition: transform .4s cubic-bezier(.63, .15, .03, 1.12);
  cursor: pointer;

  &:hover
    .dragIcon
      opacity: 1;

  &.cardDragging
    background-color: #e8f0f7;

.cardTitle
  line-height: 1.46;
  font-size: 13px;
  color: rgba(0, 0, 0, .7);

.colorDot
  position: absolute;
  z-index: 1;
  display: block;
  right: 6px;
  top: 6px;
  width: 10px;
  height: 10px;
  border-radius: 50%;

.noTodosImgWrapper
  background-color: #b3b3b3;
  border-radius: 50%;
  width: 100px;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;

.noTodosImg
  width: 70px;
  height: 70px;
  background-color: #b3b3b3;
  background: url('@/assets/sleep.svg');
  background-position: center;
  background-size: cover;

.noTodosText
  color: rgba(0, 0, 0, .5);
  width: 300px;
  text-align: center;
  padding-top: 1em;

.noTodos
  flex: 1;
  display: flex;
  padding-top: 80px;
  flex-direction: column;
  align-items: center;

.doingsWrapper
  flex: 1;
  display: flex;
  flex-direction: column;

.dragIcon
  opacity: 0;
  transition: opacity .1s;
  position: absolute;
  left: 5px;
  bottom: 5px;
  color: rgba(0, 0, 0, .2);

.deleteZone
  $size = 55px; // Размер кнопки
  position: fixed;

  // 210 - половина ширины RightSize
  right 210px - ($size / 2);

  width: $size;
  height: $size;
  border-radius: 50%;

  z-index: 9000;
  box-sizing: border-box;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  background-color: pink;
  box-shadow: 0 2px 10px #e4e4e4;

  transition: .3s bottom ease-out;

  bottom: ($size + 20px) * -1;


  &--active
    bottom: 20px;

  &--over
    border: 3px dotted red;


  .deleteIcon
    color: red;
