.tag
  width: 10px;
  height: 10px;
  border-radius: 50%;
  position: relative;

  &:hover
    &:before
      z-index: 999;
      position: absolute;
      top: calc(100% + 14px);
      border-radius: 4px;
      left: -4px;
      content: attr(data-text);
      white-space: nowrap;
      border: 1px solid #e3e5eb;
      padding: 2px 4px;
      background: #fff;

    &:after
      z-index: 998;
      content: '';
      position: absolute;
      top: calc(100% + 10px);
      left: 0;
      width: 0;
      height: 0;
      border-style: solid;
      border-width: 0 5px 5px 5px;
      border-color: transparent transparent #e3e5eb transparent;
